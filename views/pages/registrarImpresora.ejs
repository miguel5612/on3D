<!DOCTYPE html>
<html>
<head>
	<link rel="stylesheet" type="text/css" href="../css/bootsMain.css">
	<link rel="stylesheet" type="text/css" href="../css/paginaPrincipal.css">
	<title>Imprimir cotizacion</title>
<head>
	<% include ../partials/head %>
</head>
<header>
	<% include ../partials/header %>
</header>
<script type="text/javascript" src="../js/paginaPrincipal.js"></script>
<style type="text/css">
	.clientHide{
		display:none;
	}
</style>
<script type="text/javascript">
	function material1(){
		var chk1 = document.getElementById("MAT1");
		var chk2 = document.getElementById("MAT2");
		var chk3 = document.getElementById("MAT3");
		chk1.checked = true;
		chk2.checked = false;
		chk3.checked = false;
	}
	function material2(){
		var chk1 = document.getElementById("MAT1");
		var chk2 = document.getElementById("MAT2");
		var chk3 = document.getElementById("MAT3");
		chk1.checked = false;
		chk2.checked = true;
		chk3.checked = false;
	}
	function material3(){
		var chk1 = document.getElementById("MAT1");
		var chk2 = document.getElementById("MAT2");
		var chk3 = document.getElementById("MAT3");
		chk1.checked = false;
		chk2.checked = false;
		chk3.checked = true;
	}
</script>
</head>
<body>
<br><br><br><br>
<section id="main">
	<div class="container">
		<div class="row">
			<div class="col-md-3">
				<% include ../partials/menuAdmin %>
			</div>
			<div class="col-md-9">
				<div class="panel panel-default">
				<div class="panel-heading" style="background-color:  #095f59;">
				<h3 class="panel-title">Agregar impresora</h3>
				</div>
					<div style="margin:2%;padding: 1%;">
						<form method="POST" action="/addPrinter">
							<br>
							<div><label>Nombre de la impresora:&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp</label> <input type="text" name="printerName"/></div>
							<div><label>Tama√±o de la cama caliente (ej. 20x20x10):&nbsp&nbsp</label><input type="text" name="tamanoImpresora" value="20x20x16"/></div>
							<div class="radio">
								<label>Tipos de material mas utilizado en este equipo: &nbsp&nbsp&nbsp&nbsp</label>
								  <label class="radio-inline" ><input onclick="material1()" type="radio" id="MAT1" checked name="PLA">PLA</label>
								  <label class="radio-inline" ><input onclick="material2()" type="radio" id="MAT2" name="ABS">ABS</label>
								  <label class="radio-inline" ><input onclick="material3()" type="radio" id="MAT3" name="Flexi">Flexible</label>
							</div>
							<button type="submit" class="btn btn-success">Agregar nueva impresora</button>
						</form>
					</div>
				</div>
				<div class="panel panel-default" style="margin-left:2%;height: 50%">
				<div class="panel-heading" style="background-color:  #095f59;">
				<h3 class="panel-title">Impresoras registradas</h3>
				</div>
				<br>
				<a href="/configurarFilamento">
				<div class="col-md-3">
					<div class="well dash-box">
						<h2><img src="/icons/printer.ico" style="width: 80px;height: 80px;"><span class="" aria-hidden="true"/><div></div></span>&nbsp&nbsp Printmate3D </h2>
						 <h4>Prusa</h4>
					</div>
				</div>
				</a>
				<a href="/configurarFilamento">
				<div class="col-md-3">
					<div class="well dash-box">
						<h2><img src="/icons/printer.ico" style="width: 80px;height: 80px;"/><div></div><span class="" aria-hidden="true"></span>&nbsp&nbsp Delta </h2>
						<h4>Kossel</h4>
					</div>
				</div>
				</a>
				<a href="/configurarFilamento">
				<div class="col-md-3">
					<div class="well dash-box">
						<h2><img src="/icons/printer.ico" style="width: 80px;height: 80px;"/><div></div><span class="" aria-hidden="true"></span>&nbsp&nbsp Davinci 3D</h2>
						<h4>1.0</h4>
					</div>
				</div>	
				</a>

				</div>	
